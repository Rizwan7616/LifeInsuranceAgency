<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="projectdemo.PaymentController">
    <Label layoutX="220.0" layoutY="20.0" style="-fx-font-size: 24pt;" text="Credit Card Payment" />

    <Label layoutX="30.0" layoutY="80.0" text="Card Holder Name" />
    <TextField fx:id="cardHolderName" layoutX="180.0" layoutY="75.0" prefHeight="25.0" prefWidth="300.0" />

    <Label layoutX="30.0" layoutY="120.0" text="Card Number" />
    <TextField fx:id="cardNumber" layoutX="180.0" layoutY="115.0" prefHeight="25.0" prefWidth="300.0" />

    <Label layoutX="30.0" layoutY="160.0" text="Expiration Date (MM/YY)" />
    <TextField fx:id="expirationMonth" layoutX="180.0" layoutY="155.0" prefHeight="25.0" prefWidth="100.0" />
    <TextField fx:id="expirationYear" layoutX="290.0" layoutY="155.0" prefHeight="25.0" prefWidth="100.0" />

    <Label layoutX="420.0" layoutY="160.0" text="CVV" />
    <TextField fx:id="cvv" layoutX="470.0" layoutY="155.0" prefHeight="25.0" prefWidth="100.0" />

    <Label layoutX="30.0" layoutY="200.0" text="Billing Address" />
    <TextField fx:id="billingAddress" layoutX="180.0" layoutY="195.0" prefHeight="25.0" prefWidth="300.0" />

    <Label layoutX="30.0" layoutY="240.0" text="City" />
    <TextField fx:id="city" layoutX="180.0" layoutY="235.0" prefHeight="25.0" prefWidth="100.0" />

    <Label layoutX="290.0" layoutY="240.0" text="Postal Code" />
    <TextField fx:id="postalCode" layoutX="380.0" layoutY="235.0" prefHeight="25.0" prefWidth="100.0" />

    <Label layoutX="30.0" layoutY="280.0" text="Country" />
    <TextField fx:id="country" layoutX="180.0" layoutY="275.0" prefHeight="25.0" prefWidth="100.0" />

    <Label layoutX="30.0" layoutY="320.0" text="Email" />
    <TextField fx:id="email" layoutX="180.0" layoutY="315.0" prefHeight="25.0" prefWidth="300.0" />

    <Button fx:id="payButton" layoutX="250.0" layoutY="360.0" mnemonicParsing="false" onAction="#makePayment" text="Pay" />
   <Text fx:id="saveText" layoutX="343.0" layoutY="373.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Text" />
   <Button fx:id="backButton" layoutX="526.0" layoutY="20.0" mnemonicParsing="false" onAction="#loadoptions" text="Back" />
</AnchorPane>
